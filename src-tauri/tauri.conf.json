{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "PDFCraft",
  "version": "1.0.0-tauri",
  "identifier": "com.pdfcraft.desktop",
  "build": {
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../out"
  },
  "app": {
    "windows": [],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "../out/**/*"
    ]
  }
}
